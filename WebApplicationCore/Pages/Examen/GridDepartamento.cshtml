@page
@model WebApplicationCore.Pages.Examen.GridDepartamentoModel
@{
}

<div class="container">

    <div class="card">
        <div class="card-header">
            Departamento
        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="EditDepartamento"><i class='bx bx-add-to-queue'></i></a>
            <div class="row">
                <div class="col-10">
                    <table id="GridView" class="table table-bordered table-striped table-hover">

                        <thead>

                            <tr>
                                <th>Id</th>
                                <th>Descripción</th>
                                <th>Ubicacion</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>

                        </thead>

                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.Id_Departamento</td>
                                <td>@item.Descripcion</td>
                                <td>@item.Ubicacion</td>
                                <td>@(item.Estado ? "Activo": "Inactivo")</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-page="EditDepartamento" asp-route-id="@item.Id_Departamento"><i class='bx bxs-edit'></i></a>
                                    <button type="button" class="btn btn-outline-primary"><i class='bx bx-trash' onclick="GridDepartamento.OnClickEliminar(@item.Id_Departamento)"></i></button>
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/Examen/GridDepartanento.js"></script>
}
