@page
@model WebApplicationCore.Pages.Examen.GridTituloModel
@{
}

<div class="container">

    <div class="card">
        <div class="card-header">
            Titulo
        </div>
        <div class="card-body">
            <!-- Link al formulario Editar desde el boton Agregar-->
            <a class="btn btn-outline-primary" asp-page="EditTitulo"><i class='bx bx-add-to-queue'></i></a>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">

                        <thead>

                            <tr>
                                <th>Id</th>
                                <th>Descripcion</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>

                        </thead>

                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.Id_Titulo</td>
                                    <td>@item.Descripcion</td>
                                    <td>@(item.Estado ? "Activo": "Inactivo")</td>
                                    <td>
                                        <!-- Link al Formulario Editar desde el boton actualizar -->
                                        <a class="btn btn-outline-primary" asp-page="EditTitulo" asp-route-id="@item.Id_Titulo"><i class='bx bxs-edit'></i></a>
                                        <!-- Llamado a la accion eliminar desde el Boton Eliminar -->
                                        <button type="button" class="btn btn-outline-primary"><i class='bx bx-trash' onclick="GridTitulo.OnClickEliminar(@item.Id_Titulo)"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <!-- Llamamiento a la accion TypeScript GridTitulo que contiene las el mensaje y refrescamiento del boton eliminar -->
    <script defer src="~/App/Examen/GridTitulo.js"></script>
}
